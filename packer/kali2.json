{
  "variables": {
    "ova_source": "{{env `KALI_OVA`}}",
    "tag": "kali-linux"
  },
  "builders": [
    {
      "type": "virtualbox-ovf",
      "source_path": "{{user `ova_source`}}",
      "format": "ova",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "boot_wait": "30s",
      "boot_command": [
        "<leftAltOn><leftCtrlOn><f3><leftAltOff><leftCtrlOff><wait>",
        "root<enter><wait>",
        "toor<enter><wait10>",
        "curl -fsSL 'https://raw.github.com/j7k6/vagrant-whonix-kali/test/packer/kali-bootstrap.sh' | bash -s<enter><wait180>"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant"
      },
      {
        "type": "shell-local",
        "inline": [
          "vagrant box remove --force '{{user `tag`}}' || true",
          "vagrant box add --name '{{user `tag`}}' 'file://packer_virtualbox-ovf_virtualbox.box'",
          "rm '~/.vagrant.d/boxes/{{user `tag`}}/0/virtualbox/Vagrantfile' || true"
        ]
      }
    ]
  ]
}
