{
  "variables": {
    "cloud_token": "{{env `ATLAS_TOKEN`}}",
    "ova_source": "{{env `WHONIX_OVA`}}",
    "tag": "j7k6/whonix-gateway",
    "version": "14.0.1.4.4"
  },
  "builders": [
    {
      "type": "virtualbox-ovf",
      "source_path": "{{user `ova_source`}}",
      "format": "ova",
      "import_flags": ["--vsys", "0", "--eula", "accept", "--vsys", "1", "--eula", "accept"],
      "vboxmanage": [
        ["unregistervm", "Whonix-Workstation-CLI", "--delete"]
      ],
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "boot_wait": "30s",
      "boot_command": [
        "root<enter><wait>",
        "changeme<enter><wait30>",
        "<left><enter><wait>",
        "<left><enter><wait>",
        "<enter><wait><enter><wait10><enter><wait240>",
        "curl -fsSL 'https://raw.github.com/j7k6/vagrant-whonix-kali/master/packer/whonix-bootstrap.sh' | bash -s<enter><wait180>"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant"
      },
      {
        "type": "vagrant-cloud",
        "box_tag": "{{user `tag`}}",
        "access_token": "{{user `cloud_token`}}",
        "version": "{{user `version`}}"
      }
    ]
  ]
}
