{
  "variables": {
    "ova_source": "{{env `WHONIX_OVA`}}",
    "tag": "whonix-gateway"
  },
  "builders": [
    {
      "type": "virtualbox-ovf",
      "source_path": "{{user `ova_source`}}",
      "format": "ova",
      "import_flags": ["--vsys", "0", "--eula", "accept", "--vsys", "1", "--eula", "accept"],
      "vboxmanage": [
        ["unregistervm", "Whonix-Workstation-CLI", "--delete"]
      ],
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "boot_wait": "30s",
      "boot_command": [
        "root<enter><wait>",
        "changeme<enter><wait30>",
        "<left><enter><wait>",
        "<left><enter><wait>",
        "<enter><wait><enter><wait10><enter><wait240>",
        "curl -fsSL 'https://raw.github.com/j7k6/vagrant-whonix-kali/master/packer/whonix-bootstrap.sh' | bash -s<enter><wait180>"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant"
      },
      {
        "type": "shell-local",
        "inline": [
          "vagrant box remove --force '{{user `tag`}}' || true",
          "vagrant box add --name '{{user `tag`}}' 'file://packer_virtualbox-ovf_virtualbox.box'"
        ]
      }
    ]
  ]
}
